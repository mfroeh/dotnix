{
  "telemetry.telemetryLevel": "off",
  // UI
  "window.titleBarStyle": "custom",
  "workbench.colorTheme": "GitHub Dark Colorblind (Beta)",
  "explorer.openEditors.visible": 1,
  "workbench.editor.enablePreview": false,
  "window.menuBarVisibility": "compact",
  "workbench.editor.showTabs": "multiple",
  "editor.minimap.enabled": false,
  // Theme & Font
  "editor.fontFamily": "Hack Nerd Font Mono",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "Hack Nerd Font Mono",
  // Snippets
  "editor.tabCompletion": "onlySnippets",
  "editor.snippetSuggestions": "top",
  "editor.suggest.snippetsPreventQuickSuggestions": true,
  // Misc
  "workbench.startupEditor": "none",
  "editor.cursorBlinking": "solid",
  "editor.lineNumbers": "relative",
  "editor.bracketPairColorization.enabled": true,
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "editor.roundedSelection": true,
  "editor.scrollBeyondLastLine": false,
  "editor.stickyScroll.enabled": true,
  "editor.inlineSuggest.enabled": true,
  "zenMode.hideLineNumbers": false,
  "editor.parameterHints.enabled": true,
  // Terminal
  "terminal.integrated.commandsToSkipShell": [
    "-workbench.action.quickOpen", // C-p
    "-workbench.action.terminal.focusFind" // C-f
  ],
  // Vim extension settings
  "vim.changeWordIncludesWhitespace": false,
  "vim.overrideCopy": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.duration": 100,
  "vim.showMarksInGutter": true,
  // Vim general settings
  "vim.leader": " ",
  "vim.useSystemClipboard": true,
  "vim.incsearch": true,
  "vim.hlsearch": true,
  "vim.smartcase": true,
  "vim.useCtrlKeys": true,
  "vim.handleKeys": {
    "<C-k>": false,
  },
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<C-p>"
      ],
      "commands": [
        "workbench.action.quickOpen",
      ]
    },
    {
      "before": [
        "<esc>"
      ],
      "commands": [
        ":nohl"
      ]
    },
    {
      "before": [
        "K"
      ],
      "commands": [
        "editor.action.showHover"
      ]
    },
    {
      "before": [
        "<leader>",
        "r",
        "n"
      ],
      "commands": [
        "editor.action.rename"
      ]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [
        ">"
      ],
      "commands": [
        "editor.action.indentLines"
      ]
    },
    {
      "before": [
        "<"
      ],
      "commands": [
        "editor.action.outdentLines"
      ]
    }
  ],
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "settingsSync.keybindingsPerPlatform": false,
  // Language settings
  "[rust]": {
    "editor.formatOnSave": false,
    "editor.tabSize": 4
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "rust-analyzer.check.command": "clippy",
  "latex-utilities.liveReformat.enabled": true,
  "latex-workshop.latex.autoBuild.run": "onSave",
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "cmake.configureOnOpen": false,
  "cmake.showOptionsMovedNotification": false,
  "jupyter.askForKernelRestart": false,
  "python.defaultInterpreterPath": "/home/mo/miniconda3/envs/minecraft",
  "terminal.integrated.inheritEnv": false,
  "black-formatter.args": [
    "--line-length=100"
  ],
}
